<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#1A000000"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:id="@+id/textView45"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Principle #1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:textStyle="bold"
                android:id="@+id/textView46"
                android:layout_below="@+id/textView45"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Principl e#1"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/textView47"
                android:layout_below="@+id/textView46"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView47"
                android:layout_toLeftOf="@+id/textView45"
                android:layout_toStartOf="@+id/textView45" />
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView47"
                android:layout_toRightOf="@+id/textView45"
                android:layout_toEndOf="@+id/textView45" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mandatory Criterias"
                android:textColor="#E22727"
                android:id="@+id/textView48"
                android:gravity="center"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/chart1"
                android:layout_alignRight="@+id/chart1"
                android:layout_alignEnd="@+id/chart1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular Criterias"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/textView49"
                android:layout_below="@+id/chart2"
                android:layout_alignLeft="@+id/chart2"
                android:layout_alignStart="@+id/chart2"
                android:layout_alignRight="@+id/chart2"
                android:layout_alignEnd="@+id/chart2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:background="@color/white"
                android:id="@+id/textView"
                android:layout_alignBottom="@+id/chart1"
                android:layout_toEndOf="@+id/textView48"
                android:layout_marginBottom="1dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>