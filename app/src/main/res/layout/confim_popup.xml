<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="330dp"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="230dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thank you ,"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textView51"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We have sent you a password reset link.Please check your email akhilkrishvp@gmail.com for further instructions.Have a great day!"
                android:id="@+id/textView52"
                android:paddingLeft="10dp"
                android:paddingRight="4dp"
                android:layout_below="@+id/textView51"
                android:layout_marginTop="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/textView51" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="OK"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/spinner_bg"
                android:id="@+id/textView53"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>