<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A000000"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topCard"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N"
                android:textColor="#ffffff"
                android:id="@+id/textView30"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:text=""
                android:layout_marginLeft="5dp"
                android:background="@drawable/green_border"
                android:id="@+id/textView31"
                android:layout_below="@+id/textView30"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:id="@+id/textView32"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/ash_border"
                android:layout_below="@+id/textView30"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complies"
                android:textColor="#39b54a"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textView33"
                android:layout_below="@+id/textView31"
                android:layout_alignLeft="@+id/textView31"
                android:layout_alignStart="@+id/textView31" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Applicable"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#c2c2c2"
                android:id="@+id/textView34"
                android:layout_alignTop="@+id/textView33"
                android:layout_alignLeft="@+id/textView32"
                android:layout_alignStart="@+id/textView32" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:text=""
                android:layout_marginRight="50dp"
                android:background="@drawable/red_border"
                android:id="@+id/textView35"
                android:layout_below="@+id/textView30"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:visibility="invisible"
                android:layout_marginRight="5dp"
                android:background="@drawable/blue_border"
                android:id="@+id/textView36"
                android:layout_alignTop="@+id/textView32"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non Compliance"
                android:textColor="#ed1c24"
                android:textStyle="bold"

                android:id="@+id/textView37"
                android:layout_alignTop="@+id/textView34"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Minor Non Compliance"
                android:textColor="#31b7e6"
                android:visibility="invisible"
                android:id="@+id/textView38"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView36"
                android:layout_toRightOf="@+id/textView30"
                android:layout_toEndOf="@+id/textView30"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:id="@+id/recyclerview"
        android:layout_below="@+id/topCard">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>