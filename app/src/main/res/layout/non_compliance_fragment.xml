<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#1A000000"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bigger">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topCard"
            android:layout_margin="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/spinner_bg"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/relativeLayout13">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/imageView4"
                        android:layout_marginTop="5dp"
                        android:visibility="invisible"
                        android:src="@drawable/down_arrow"
                        android:layout_below="@+id/spinner"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner"
                        android:visibility="gone"
                        android:background="@drawable/spinner_style_bg"
                        style="@style/Widget.AppCompat.Light.DropDownItem.Spinner"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner2"
                        android:visibility="invisible"
                        android:background="@drawable/spinner_style_bg"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="zdf"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:id="@+id/textView39"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Criterions :"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/chapterNameText"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/relativeLayout13"
                    android:layout_alignStart="@+id/text1"
                    android:layout_alignEnd="@+id/relativeLayout13" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Criterions :"
                    android:textSize="17sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/yellow"
                    android:id="@+id/text1"
                    android:layout_below="@+id/chapterNameText"
                    android:layout_alignLeft="@+id/relativeLayout13"
                    android:layout_alignStart="@+id/relativeLayout13" />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/recyclerview"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/text1">

                </android.support.v7.widget.RecyclerView>

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/listView"
                    android:visibility="gone"
                    android:layout_alignTop="@+id/relativeLayout13"
                    android:layout_alignLeft="@+id/relativeLayout13"
                    android:layout_alignStart="@+id/relativeLayout13"
                    android:layout_alignRight="@+id/relativeLayout13"
                    android:layout_alignEnd="@+id/relativeLayout13" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/scrollView"
            android:layout_below="@+id/topCard">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/middleCard"
                    android:layout_margin="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Criteria Summary"
                            android:textSize="17sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/yellow"
                            android:id="@+id/text2"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Here's a correct table of percentages to hex values. E.g. for 50% white you'd use #80FFFFFF."
                            android:layout_marginTop="10dp"
                            android:padding="7dp"
                            android:id="@+id/criteraDescText"
                            android:layout_below="@+id/text2"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/middleCard"
                    android:id="@+id/thirdCard"
                    android:layout_margin="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Score Obtailed"
                            android:textSize="17sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/yellow"
                            android:id="@+id/text3"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/text3"
                            android:background="@drawable/spinner_bg"
                            android:id="@+id/relativeLayout14"
                            android:layout_toLeftOf="@+id/textView44"
                            android:layout_alignLeft="@+id/text3"
                            android:layout_alignStart="@+id/text3">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView5"
                                android:src="@drawable/radio_button_selected"
                                android:layout_marginLeft="10dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="COMPILES"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:id="@+id/resultText"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text er"
                            android:textColor="#ffffff"
                            android:id="@+id/textView44"
                            android:layout_alignTop="@+id/relativeLayout14"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/fourthCard"
                    android:id="@+id/fifthCard"
                    android:layout_margin="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText"
                            android:hint="Auditor's Suggestion"
                            android:textColorHint="#80000000"
                            android:textSize="16sp"
                            android:inputType="textMultiLine"
                            android:background="@color/white"
                            android:gravity="top|left"
                            android:padding="5dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/thirdCard"
                    android:id="@+id/fourthCard"
                    android:layout_margin="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText1"
                            android:hint="Comment"
                            android:textColorHint="#80000000"
                            android:textSize="16sp"
                            android:inputType="textMultiLine"
                            android:background="@color/white"
                            android:gravity="top|left"
                            android:padding="5dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:id="@+id/relativeLayout"
        android:visibility="gone"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/textView90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="No Non-Complies found." />

    </RelativeLayout>


</RelativeLayout>